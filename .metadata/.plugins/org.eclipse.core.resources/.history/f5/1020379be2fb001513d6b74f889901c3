<?php

session_start();

require 'php/database.php';

if( isset($_SESSION['user_id']) ){

	$records = $conn->prepare('SELECT id,name,email,password FROM users WHERE id = :id');
	$records->bindParam(':id', $_SESSION['user_id']);
	$records->execute();
	$results = $records->fetch(PDO::FETCH_ASSOC);

	$user = NULL;

	if( count($results) > 0){
		$user = $results;
	}

}

?>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
	
	<title>To_Do_Site</title>
	<link rel="stylesheet" type="text/css" href="assets/css/style.css">
	<link href='http://fonts.googleapis.com/css?family=Comfortaa' rel='stylesheet' type='text/css'>
</head>
<body>
<div id = "container">

	<div class="header">
		<a href="index.php">Welcome</a>
		<a href="login.php">Log ind</a> or
		<a href="php/register.php">Register</a>
	</div>

	<?php if( !empty($user) ): ?>

		<br />Welcome back <?= $user['name']; ?> 
		<br /><br />You are already loged in!
		<br /><br />
		<a href="php/front.php">To frontpage?</a>
		<a href="php/logout.php">Logout?</a>

	<?php else: ?>

		<h1>Welcome to our To_Do_Website</h1>
		<h2>About our site. please contact us if your interested using the contact form</h2>
		<a>
			Text about us and our site
		</a>

	<?php endif; ?>
</div>

</body>
</html>