if(!empty($_POST['email']) && !empty($_POST['password'])):
	
	$records = $conn->prepare('SELECT id, f_name, l_name, email, username, password FROM auth_users WHERE email = :email ');
	$records->bindParam(':email', $_POST['email']);
	$records->execute();
	$results = $records->fetch(PDO::FETCH_ASSOC);

	$message = '';

	if(count($results) > 0){// && password_verify($_POST['password'], $results['password']) ){

		echo "her";
		
	$sql = "INSERT INTO reg_users(f_name, l_name, email, username, password) VALUES (:f_name, :l_name, :email, :username, :password)";
	$stmt = $conn->prepare($sql);
	
	$stmt->bindParam(':f_name', $_POST['f_name']);
	$stmt->bindParam(':l_name', $_POST['l_name']);
	$stmt->bindParam(':email', $_POST['email']);
	$stmt->bindParam(':username', $_POST['user']);
	$stmt->bindParam(':password', password_hash($_POST['password1'], PASSWORD_BCRYPT));
	
	if( $stmt->execute() ):
	echo "success";
	endif;
	} else {
		$message = 'Sorry, those credentials do not match';
	}

endif;

