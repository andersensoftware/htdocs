<?php
$server = 'localhost';
$username = 'root';
$password = '';
$database = 'testDB';

if(!empty($_POST['username']) && !empty($_POST['password']))
{
	


$con2 = mysqli_connect($server,$username,$password) or die(mysqli_error($con2)); //connect to server
mysqli_select_db($con2, $database) or die(mysqli_error($con2));

$sql = "select f_name, l_name from auth_users where username = '$_POST[username]' AND password = password('$_POST[password]')";

$result = mysqli_query($con2, $sql) or die (mysqli_error($con2));
}
if(mysqli_num_rows($result) == 1)
{
	echo "working";
}
else {
	echo "not working";
}

?>

<html>
<head>
<title>Listing 15.7 User Login Form</title>
</head>
<body>
<H1>Login form</H1>
<Form  ACTION="register.php" method="POST">
<p><strong>Username:</strong><BR>
<INPUT TYPE= "text" NAME="username"></p>
<p><strong>Password:</strong><BR>
<INPUT TYPE="password" NAME="password"></p>
<p><input type="SUBMIT" NAME="submit" VALUE="Login"></p>
</Form>
</body>
</html>